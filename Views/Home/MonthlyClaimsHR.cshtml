<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>HR Claims Dashboard</h2>
            <p class="text-muted">Welcome, @Model.HRName</p>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Ready for Payment</h5>
                    <h3>@Model.ReadyForPaymentCount</h3>
                    <p class="card-text">Approved claims</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total Amount</h5>
                    <h3>R @Model.TotalApprovedAmount.ToString("N2")</h3>
                    <p class="card-text">To be processed</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">All Claims</h5>
                    <h3>@Model.TotalClaimsCount</h3>
                    <p class="card-text">In period</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Avg. Claim</h5>
                    <h3>R @(Model.TotalClaimsCount > 0 ? (Model.TotalApprovedAmount / Model.ReadyForPaymentCount).ToString("N2") : "0.00")</h3>
                    <p class="card-text">Per claim</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters Card -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-filter"></i> Report Filters</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Status Filter</label>
                    <select asp-for="StatusFilter" asp-items="new SelectList(Model.AvailableStatuses)" class="form-select">
                        <option value="">All Statuses</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Time Period</label>
                    <select asp-for="PeriodFilter" asp-items="new SelectList(Model.AvailablePeriods)" class="form-select" id="periodSelect">
                    </select>
                </div>
                <div class="col-md-3" id="customStartDate" style="display: none;">
                    <label class="form-label">From Date</label>
                    <input asp-for="StartDate" type="date" class="form-control" value="@Model.StartDate?.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-3" id="customEndDate" style="display: none;">
                    <label class="form-label">To Date</label>
                    <input asp-for="EndDate" type="date" class="form-control" value="@Model.EndDate?.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-12 mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Apply Filters
                    </button>
                    <a href="@Url.Action("HR")" class="btn btn-outline-secondary">
                        <i class="fas fa-refresh"></i> Reset
                    </a>
                    <button type="button" class="btn btn-success" onclick="exportToExcel()">
                        <i class="fas fa-file-excel"></i> Export to Excel
                    </button>
                    <button type="button" class="btn btn-danger" onclick="generatePaymentReport()">
                        <i class="fas fa-file-pdf"></i> Payment Report
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Claims Report Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center bg-dark text-white">
            <h5 class="mb-0">
                <i class="fas fa-list-alt"></i> Claims Report
                <small class="ms-2 text-muted">@Model.Claims.Count records found</small>
            </h5>
            <div>
                <span class="badge bg-success me-2">Ready: @Model.ReadyForPaymentCount</span>
                <span class="badge bg-primary">Total: R @Model.TotalApprovedAmount.ToString("N2")</span>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Claims.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0" id="claimsTable">
                        <thead class="table-light">
                            <tr>
                                <th>Claim ID</th>
                                <th>Staff Name</th>
                                <th>Staff ID</th>
                                <th>Department</th>
                                <th>Course</th>
                                <th>Hours</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Approved Date</th>
                                <th>Approved By</th>
                                <th>Days Since Approval</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.Claims.OrderByDescending(c => c.ApprovedDate))
                            {
                                <tr class="@(claim.IsPaymentReady ? "table-success" : "")">
                                    <td>
                                        <strong>#@claim.ClaimId</strong>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary rounded-circle me-2 d-flex align-items-center justify-content-center text-white" style="width: 32px; height: 32px; font-size: 12px;">
                                                @claim.StaffName.Substring(0, 1)
                                            </div>
                                            @claim.StaffName
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@claim.StaffId</span>
                                    </td>
                                    <td>@claim.Department</td>
                                    <td>
                                        <small class="text-muted" title="@claim.CourseName">
                                            @(claim.CourseName.Length > 30 ? claim.CourseName.Substring(0, 30) + "..." : claim.CourseName)
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@claim.TotalHours.ToString("N1")h</span>
                                    </td>
                                    <td>
                                        <strong>R @claim.TotalAmount.ToString("N2")</strong>
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(claim.FinalStatus)">
                                            @claim.FinalStatus
                                        </span>
                                    </td>
                                    <td>
                                        @if (claim.ApprovedDate.HasValue)
                                        {
                                            <small>@claim.ApprovedDate.Value.ToString("dd/MM/yyyy")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@claim.ApprovedByName</small>
                                    </td>
                                    <td>
                                        @if (claim.DaysSinceApproval > 0)
                                        {
                                            <span class="badge @(claim.DaysSinceApproval > 7 ? "bg-warning" : "bg-success")">
                                                @claim.DaysSinceApproval day@(claim.DaysSinceApproval > 1 ? "s" : "")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary" title="View Details" onclick="viewClaim(@claim.ClaimId)">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            @if (claim.IsPaymentReady)
                                            {
                                                <button class="btn btn-outline-success" title="Mark as Paid" onclick="markAsPaid(@claim.ClaimId)">
                                                    <i class="fas fa-check-circle"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="5" class="text-end"><strong>Totals:</strong></td>
                                <td><strong>@Model.Claims.Sum(c => c.TotalHours).ToString("N1")h</strong></td>
                                <td><strong>R @Model.Claims.Sum(c => c.TotalAmount).ToString("N2")</strong></td>
                                <td colspan="5"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No claims found</h5>
                    <p class="text-muted">No claims match the selected criteria.</p>
                    <a href="@Url.Action("HR")" class="btn btn-primary">Clear Filters</a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Show/hide custom date fields based on period selection
        function toggleCustomDateFields() {
            const periodSelect = document.getElementById('periodSelect');
            const customStartDate = document.getElementById('customStartDate');
            const customEndDate = document.getElementById('customEndDate');

            const isCustom = periodSelect.value === 'Custom';
            customStartDate.style.display = isCustom ? 'block' : 'none';
            customEndDate.style.display = isCustom ? 'block' : 'none';
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            toggleCustomDateFields();
            document.getElementById('periodSelect').addEventListener('change', toggleCustomDateFields);
        });

        // Export to Excel functionality
        function exportToExcel() {
            const table = document.getElementById('claimsTable');
            let csv = [];

            // Headers
            const headers = [];
            for (let i = 0; i < table.rows[0].cells.length - 1; i++) { // Exclude actions column
                headers.push('"' + table.rows[0].cells[i].innerText.replace(/"/g, '""') + '"');
            }
            csv.push(headers.join(','));

            // Data rows
            for (let i = 1; i < table.rows.length - 1; i++) { // Exclude header and footer
                const row = [];
                const cells = table.rows[i].cells;
                for (let j = 0; j < cells.length - 1; j++) { // Exclude actions column
                    let cellText = cells[j].innerText;
                    // Remove HTML content and get clean text
                    cellText = cellText.replace(/<[^>]*>/g, '').trim();
                    row.push('"' + cellText.replace(/"/g, '""') + '"');
                }
                csv.push(row.join(','));
            }

            // Create and download CSV file
            const csvContent = "data:text/csv;charset=utf-8," + csv.join('\n');
            const encodedUri = encodeURI(csvContent);
            const link = document.createElement("a");
            link.setAttribute("href", encodedUri);
            link.setAttribute("download", `claims_report_${new Date().toISOString().split('T')[0]}.csv`);
