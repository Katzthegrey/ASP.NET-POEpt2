@using POEpt1.ViewModels;
@model MonthlyClaimsHRViewModel;

@{
    ViewData["Title"] = "HR Claims Dashboard";
}
@Html.Partial("_menu")
<style>
    /* ===== HR DASHBOARD SPECIFIC STYLES ===== */
    .hr-dashboard {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #ec6ead 100%);
        min-height: 100vh;
        padding: 20px;
        margin: -20px;
    }

    /* Header Section */
    .HR-msg {
        background: rgba(255, 255, 255, 0.12);
        backdrop-filter: blur(25px);
        -webkit-backdrop-filter: blur(25px);
        padding: 30px 40px;
        margin: 100px auto 30px auto;
        border-radius: 15px;
        box-shadow: 0 20px 40px rgba(108, 110, 234, 0.25), 0 15px 35px rgba(236, 110, 173, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.18);
        text-align: center;
        position: relative;
        max-width: 1200px;
    }

    .HR-msg h1 {
        color: white;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 15px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .HR-msg h2 {
        color: rgba(255, 255, 255, 0.9);
        font-size: 1.8rem;
        font-weight: 600;
        margin: 0;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
    }

    /* Summary Cards */
    .hr-summary-cards {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
        margin-bottom: 2rem;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
    }

    .hr-summary-card {
        background: rgba(255, 255, 255, 0.12);
        backdrop-filter: blur(25px);
        -webkit-backdrop-filter: blur(25px);
        padding: 2rem 1.5rem;
        border-radius: 15px;
        box-shadow: 0 15px 35px rgba(108, 110, 234, 0.2), 0 10px 25px rgba(236, 110, 173, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.18);
        text-align: center;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .hr-summary-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #667eea, #ec6ead);
    }

    .hr-summary-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(108, 110, 234, 0.3), 0 15px 35px rgba(236, 110, 173, 0.25);
    }

    .hr-summary-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .hr-summary-label {
        font-size: 1rem;
        color: rgba(255, 255, 255, 0.9);
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Filter Section */
    .hr-filter-card {
        background: rgba(255, 255, 255, 0.12);
        backdrop-filter: blur(25px);
        -webkit-backdrop-filter: blur(25px);
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 15px 35px rgba(108, 110, 234, 0.2), 0 10px 25px rgba(236, 110, 173, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.18);
        margin-bottom: 2rem;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
    }

    .hr-filter-title {
        color: white;
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .hr-filter-form {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        align-items: end;
    }

    .hr-form-group {
        position: relative;
        margin-bottom: 0;
    }

    .hr-form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: white;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        font-size: 1rem;
    }

    .hr-form-select,
    .hr-form-control {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 8px;
        box-sizing: border-box;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        color: white;
        font-size: 16px;
        transition: all 0.3s ease;
    }

    .hr-form-select::placeholder,
    .hr-form-control::placeholder {
        color: rgba(255, 255, 255, 0.7);
    }

    .hr-form-select:focus,
    .hr-form-control:focus {
        outline: none;
        border-color: rgba(236, 110, 173, 0.6);
        background: rgba(255, 255, 255, 0.15);
        box-shadow: 0 0 15px rgba(236, 110, 173, 0.3);
    }

    .hr-form-select {
        appearance: none;
        -webkit-appearance: none;
        background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='white'%3e%3cpath d='M7 10l5 5 5-5z'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 15px center;
        background-size: 16px;
        padding-right: 45px;
    }

    /* Buttons */
    .hr-btn-group {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        grid-column: 1 / -1;
        margin-top: 1rem;
    }

    .hr-btn {
        padding: 12px 25px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 16px;
        transition: all 0.3s ease;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

    .hr-btn-primary {
        background: #3498db;
        color: white;
    }

    .hr-btn-primary:hover {
        background: #2980b9;
        box-shadow: 0 8px 25px rgba(108, 110, 234, 0.4);
        transform: translateY(-2px);
    }

    .hr-btn-success {
        background: #27ae60;
        color: white;
    }

    .hr-btn-success:hover {
        background: #219653;
        box-shadow: 0 8px 25px rgba(39, 174, 96, 0.4);
        transform: translateY(-2px);
    }

    .hr-btn-danger {
        background: #e74c3c;
        color: white;
    }

    .hr-btn-danger:hover {
        background: #c0392b;
        box-shadow: 0 8px 25px rgba(231, 76, 60, 0.4);
        transform: translateY(-2px);
    }

    .hr-btn-outline {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
    }

    .hr-btn-outline:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.5);
        transform: translateY(-2px);
    }

    /* Claims Table Container */
    .hr-table-container {
        background: rgba(255, 255, 255, 0.12);
        backdrop-filter: blur(25px);
        -webkit-backdrop-filter: blur(25px);
        border-radius: 15px;
        box-shadow: 0 15px 35px rgba(108, 110, 234, 0.2), 0 10px 25px rgba(236, 110, 173, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.18);
        overflow: hidden;
        margin-bottom: 2rem;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
    }

    .hr-table-header {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        padding: 1.5rem 2rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .hr-table-title {
        color: white;
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .hr-table-stats {
        display: flex;
        gap: 1rem;
        margin-top: 0.5rem;
    }

    .hr-stat-badge {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        color: white;
        font-weight: 600;
        font-size: 0.9rem;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    /* Table Styling */
    .hr-table {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
        background: transparent;
    }

    .hr-table thead th {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        color: white;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.5px;
        padding: 1.25rem 1rem;
        border-bottom: 2px solid rgba(255, 255, 255, 0.3);
