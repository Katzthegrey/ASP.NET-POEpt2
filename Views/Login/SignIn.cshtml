@using POEpt1.ViewModels.Account
@model SignInViewModel

@{
    ViewData["Title"] = "Sign In";
}

<link rel="stylesheet" href="~/css/SignUp.css" />

<body class="auth-page">
    <form class="SignInForm" asp-controller="Login" asp-action="SignIn" method="post">
        <h2 class="auth-title">Sign In</h2>

        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="error-message"></div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="error-message">@TempData["ErrorMessage"]</div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="success-message">@TempData["SuccessMessage"]</div>
        }

        <div class="form-group SignInEmail">
            <label asp-for="Email"></label>
            <i class="fa-solid fa-user"></i>
            <input asp-for="Email" type="email" placeholder="enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group SignInPass">
            <label asp-for="Password"></label>
            <i class="fa-solid fa-lock"></i>
            <input asp-for="Password" type="password" placeholder="enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group SignInRole">
            <label asp-for="CustomRole"></label>
            <i class="fa-solid fa-users"></i>
            <select asp-for="CustomRole" asp-items="Model.AvailableRoles" id="roleDropdown">
                <option value="">Select Role</option>
            </select>
            <span asp-validation-for="CustomRole" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
        </div>

        <input class="submit-btn" type="submit" value="Sign In" />

        <div class="form-footer">
            Don't Have Account? <a asp-controller="Login" asp-action="SignUp">Sign Up</a>
        </div>
    </form>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


