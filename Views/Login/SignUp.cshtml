@using POEpt1.ViewModels.Account
@model SignUpViewModel

@{
    ViewData["Title"] = "Sign Up";
    ViewBag.BodyClass = "auth-page";
}

<link rel="stylesheet" href="~/css/SignUp.css" />

<body class="@ViewBag.BodyClass">
    <form class="SignUpForm" asp-controller="Login" asp-action="SignUp" method="post">
        @Html.AntiForgeryToken()

        <h2 class="auth-title">Sign Up</h2>

        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="error-message"></div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="error-message">@TempData["ErrorMessage"]</div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="success-message">@TempData["SuccessMessage"]</div>
        }

        <div class="form-group">
            <label asp-for="UserName"></label>
            <i class="fa-solid fa-user"></i>
            <input asp-for="UserName" type="text" placeholder="enter username" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <i class="fa-solid fa-envelope"></i>
            <input asp-for="Email" type="email" placeholder="enter email address" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <i class="fa-solid fa-lock"></i>
            <input asp-for="Password" type="password" placeholder="create a password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <i class="fa-solid fa-lock"></i>
            <input asp-for="ConfirmPassword" type="password" placeholder="confirm your password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CustomRole"></label>
            <i class="fa-solid fa-users"></i>
            <select asp-for="CustomRole" asp-items="Model.AvailableRoles" id="roleDropdown">
                <option value="">Select Role</option>
            </select>
            <span asp-validation-for="CustomRole" class="text-danger"></span>
        </div>

        <input class="auth-btn" type="submit" value="Sign Up" />

        <div class="form-footer">
            Already have an account? <a asp-controller="Login" asp-action="SignIn">Sign In</a>
        </div>
    </form>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


