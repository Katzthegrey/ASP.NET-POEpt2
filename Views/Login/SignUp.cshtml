@{
    ViewData["Title"] = "Sign Up";
    ViewBag.BodyClass = "auth-page";
}

<link rel="stylesheet" href="~/css/SignUp.css" />

<body class="@ViewBag.BodyClass">
    <form class="SignUpForm" action="SignIn" method="post">
        <h2 class="auth-title">Sign Up</h2>

        <div class="form-group">
            <label>UserName</label>
            <i class="fa-solid fa-user"></i>
            <input type="text" name="Name" id="Name" placeholder="enter username" />
        </div>

        <div class="form-group">
            <label>Password</label>
            <i class="fa-solid fa-lock"></i>
            <input type="password" name="Password" id="Password" placeholder="create a password" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <i class="fa-solid fa-envelope"></i>
            <input type="email" name="Email" id="Email" placeholder="enter email address" />
        </div>

        <div class="form-group">
            <label>Select Role</label>
            <i class="fa-solid fa-users"></i>
            @Html.DropDownList("Roles", new List<SelectListItem>{
            new SelectListItem { Text = "Lecturer", Value = "1" },
                        new SelectListItem { Text = "Coordinator", Value = "2" },
                        }, new { id = "roleDropdown" })
        </div>

        <input class="auth-btn" type="submit" value="Sign Up" />

        <div class="form-footer">
            Already have an account? <a href="~/Login/SignIn">Sign In</a>
        </div>
    </form>
</body>


